<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/network_list_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/status_bar"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Current Network Card -->
                <include layout="@layout/card_current_network" />

                <!-- Device List Section (for ztncui integration) -->
                <LinearLayout
                    android:id="@+id/device_list_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/device_list"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/device_list_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="80dp"
                        android:clipToPadding="false" />

                </LinearLayout>

                <!-- Networks List (hidden by default, can be shown if needed) -->
                <LinearLayout
                    android:id="@+id/networks_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/joined_networks_list"
                        android:name="dev.wuyuan.zerotierfix.ui.NetworkListFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="80dp"
                        app:layoutManager="LinearLayoutManager"
                        tools:context=".ui.NetworkListFragment"
                        tools:listitem="@layout/list_item_network" />

                </LinearLayout>

                <!-- Empty state -->
                <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/no_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="200dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/click_to_add_network"
                        android:textColor="?attr/lightGreyText"
                        android:textSize="36sp" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/primary_green"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/node_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="?attr/lightGreyText" />

            <TextView
                android:id="@+id/node_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/node_id"
                android:padding="5dp"
                android:text="@string/status_offline"
                android:textColor="?attr/lightGreyText" />

            <TextView
                android:id="@+id/client_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/node_status"
                android:padding="5dp"
                android:text="@string/unknown_version"
                android:textColor="?attr/lightGreyText" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/client_version"
                android:text="@string/unknown_version"
                android:textColor="?attr/lightGreyText" />
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
