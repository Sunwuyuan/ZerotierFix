<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with dynamic color support. -->
    <style name="Theme.ZerotierFix" parent="Theme.Material3.DayNight">
        <!-- Enable dynamic color theming on Android 12+ -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <!-- Customize your theme here. -->
        <item name="greyText">@color/grey_text</item>
        <item name="lightGreyText">@color/light_grey_text</item>
        <item name="tableRowGrey">@color/table_row_grey</item>
    </style>

    <style name="Theme.ZerotierFix.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZerotierFix.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZerotierFix.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>